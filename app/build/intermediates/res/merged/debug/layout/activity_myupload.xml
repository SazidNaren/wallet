<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#E0E0E0">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchUploadFileEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:drawableLeft="@drawable/search"
            android:hint="Search"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/todayUpLoadedTextView"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#FFECB3"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="TODAY" />
    </LinearLayout>

    <ListView
        android:id="@+id/todayUpLoadedListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/linearLayout"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#fff"
        android:dividerHeight="1dp">
    </ListView>
</RelativeLayout><!-- From: file:/home/sajid/Joy(Backup)/wallet/app/src/main/res/layout/activity_myupload.xml -->
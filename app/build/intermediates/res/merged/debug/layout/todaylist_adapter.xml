<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:background="#FFECB3"
        android:gravity="left"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:text="TODAY"
        android:textColor="@color/blackColor"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/upLoadFileImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvHeader"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:src="@drawable/file_name_image" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHeader"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/nextFileDetailPage"
        android:layout_toRightOf="@+id/upLoadFileImageView">

        <TextView
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="File Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/uploadFileTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileName"
            android:gravity="center_horizontal"
            android:text="uploaded 10 minute ago"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/nextFileDetailPage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/next_forward" />

</RelativeLayout><!-- From: file:/home/sajid/Joy(Backup)/wallet/app/src/main/res/layout/todaylist_adapter.xml -->
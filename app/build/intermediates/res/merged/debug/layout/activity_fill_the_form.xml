<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".activity.EditDocumentScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">



            <!-- Attachment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Attachment"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/attachmentImageView"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="#00000000"
                    android:src="@drawable/attachment_image"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/snapImageViewButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/snap"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- title -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Title"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/documentTitleEditTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="85dp"
                    android:padding="10dp"
                    android:background="#00000000"
                    android:hint="License"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <!-- date of issue -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/documentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="DOC Type"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/documentTypesSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/dateOfIssue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Date of issue"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dateOfIssueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp"
                    android:padding="10dp"
                    android:inputType="date"
                    android:background="#00000000"
                    android:hint="20-7-2015"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Date of Expire -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/dateOfExpire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Date of expiry"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dateOfExpireTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:hint="20-7-2015"
                    android:inputType="date"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Supliers Name -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/supliersName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Supplier Name"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/supliersNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:padding="10dp"
                    android:background="#00000000"
                    android:hint="John Deliver"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Registration Id -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/registrationId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Document No."
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/registrationIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:hint="12432243"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Additional Information -->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:textColor="@color/whiteColor">

                <TextView
                    android:id="@+id/additionalInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="Additional info"
                    android:textColor="@color/blackColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/additionalInformationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:background="#00000000"
                    android:hint="Some additional info"
                    android:padding="10dp"
                    android:textColor="@color/blackColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/submitBtn"
                style="@style/SubmitButton"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="40dp"
                android:text="Update" />

            <Button
                android:id="@+id/reScan"
                style="@style/SubmitButton"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="40dp"
                android:text="ReTake" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/S:/Android_Studio_Apps/WalletGit/wallet/app/src/main/res/layout/activity_fill_the_form.xml -->